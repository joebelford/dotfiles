{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#BF616A",
          "style": "plain",
          "template": "{{ .UserName }} ",
          "type": "session"
        },
        {
          "foreground": "#81A1C1",
          "properties": {
            "style": "agnoster_short"
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#6C6C6C",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "plain",
          "template": "{{ .UpstreamIcon }}{{ if eq .Ref \"main\" }}<#FF0000>{{ .HEAD }}</>{{ end }}{{ if ne .Ref \"main\" }}{{ .HEAD }}{{ end }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }}<#FFA500>{{ .Working.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": false,
      "type": "prompt",
      "segments": [
        {
          "foreground": "p:kubernetes-text",
          "style": "plain",
          "template": "<p:ocp-symbol-color>\ue7b7</>{{if .Namespace}} {{.Namespace}} {{end}}",
          "type": "kubectl"
        },
        {
          "foreground": "p:cloud-text-azure",
          "properties": {
            "source": "cli"
          },
          "style": "plain",
          "template": " <p:azure-symbol-color>\uebd8</> {{ .Name }}",
          "type": "az"
        },
        {
          "foreground": "p:cloud-text-azure",
          "properties": {
            "source": "pwsh"
          },
          "style": "plain",
          "template": " <p:azure-symbol-color>\uebd8</> (PS) {{ .Name }}",
          "type": "az"
        }
      ]
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#A3BE8C",
          "properties": {
            "style": "austin"
          },
          "style": "plain",
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#B48EAD",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#BF616A{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\u276f ",
          "type": "status"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.PWD}}",
  "transient_prompt": {
    "foreground": "#B48EAD",
    "foreground_templates": [
      "{{ if gt .Code 0 }}#BF616A{{ end }}"
    ],
    "template": "\u276f "
  },
  "palette": {
    "kubernetes-text": "#BF616A",
    "ocp-symbol-color": "#FF0000",
    "azure-symbol-color": "#0080FF",
    "cloud-text-azure": "#4285F4"
  },
  "version": 2
}
